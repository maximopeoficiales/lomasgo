<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maximoprog.lomasgo">
    <!-- permiso para acceder a internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_lomasgo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_lomasgo_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lomasgo"
        android:usesCleartextTraffic="true">
        <activity android:name=".NoticiaDetalleActivity"></activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>