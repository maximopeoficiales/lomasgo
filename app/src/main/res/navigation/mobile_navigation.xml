        android:name="com.maximoprog.lomasgo.ui.servicios.ServiciosFragment"
        android:label="@string/title_servicios"
        tools:layout="@layout/fragment_services" />

    <fragment
        android:id="@+id/navigation_noticias"
        android:name="com.maximoprog.lomasgo.ui.noticias.NoticiasFragment"
